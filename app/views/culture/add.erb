        <!--지도 끝-->
        
                <div class="rightContainer">
                    <h1>공연 등록하기</h1>
                    <form role="form" method="POST" action='/culture/outputsave' enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
                                <div class="form-group">
                                    <label>공연 이름</label>
                                    <input type="text" class="form-control" name="performancename">
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                                <div class="form-group">
                                    <label>간략한 장소 설명</label>
                                    <div class="input-group">
                                        <input class="form-control" type="text" name="briefaddress">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>공연 설명</label>
                            <textarea class="form-control" rows="4" name="performancenameinfo"></textarea>
                        </div>
                        <div class="form-group">
                            <label>지도에서 장소 <span id="latitude" class="label label-default"></span> <span id="longitude" class="label label-default"></span></label>
                            <input class="form-control" type="text" id="address" placeholder="지도에서 위치 클릭" autocomplete="off">
                            <p class="help-block">지도에서 위치를 클릭하면 등록됩니다</p>
                        </div>
                        
                        <div class="row">
                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                <div class="form-group">
                                    <label>사진 올리기</label>
                                    <input type="file" name="imageup" class="file" multiple data-show-upload="false" data-show-caption="false" data-show-remove="false" accept="image/jpeg,image/png" data-browse-class="btn btn-o btn-default" data-browse-label="사진 찾기">
                                    <p class="help-block">하나의 이미지만 업로드 됩니다</p>
                                </div>
                            </div>
                        </div>
                        
                        
                        <div class="row">
                            <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                                <div class="form-group">
                                    <label>공연 카테고리</label>
                                    <div class="checkbox custom-checkbox"><label><input type="checkbox" name="musical" value="뮤지컬"><span class="fa fa-check"></span> 뮤지컬</label></div>
                                    <div class="checkbox custom-checkbox"><label><input type="checkbox" name="play" value="연극"><span class="fa fa-check"></span> 연극</label></div>
                                    <div class="checkbox custom-checkbox"><label><input type="checkbox" name="concert" value="콘서트"><span class="fa fa-check"></span> 콘서트</label></div>
                                    <div class="checkbox custom-checkbox"><label><input type="checkbox" name="classic" value="클래식 무용"><span class="fa fa-check"></span> 클래식 무용</label></div>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                                <div class="form-group">
                                    <label>&nbsp;</label>
                                    <div class="checkbox custom-checkbox"><label><input type="checkbox" name="jeonsi" value="전시"><span class="fa fa-check"></span> 전시</label></div>
                                    <div class="checkbox custom-checkbox"><label><input type="checkbox" name="sport" value="스포츠"><span class="fa fa-check"></span> 스포츠</label></div>
                                    <div class="checkbox custom-checkbox"><label><input type="checkbox" name="busking" value="버스킹"><span class="fa fa-check"></span> 버스킹</label></div>
                                    <div class="checkbox custom-checkbox"><label><input type="checkbox" name="amateur" value="아마추어동아리"><span class="fa fa-check"></span> 아마추어동아리</label></div>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                                <div class="form-group">
                                    <label>&nbsp;</label>
                                    <div class="checkbox custom-checkbox"><label><input type="checkbox" name="etc" value="기타"><span class="fa fa-check"></span> 기타</label></div>
                                </div>
                            </div>
                        </div>
                        <p class="help-block">하나의 장르만 선택 가능합니다</p>
                        <div class="form-group">
                            <input type='submit' value='등록하기' class="btn btn-green btn-lg">
                        </div>
